<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_down</item>
    </style>


    <style name="dailogboxtheme" parent="android:style/Theme.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@color/color_transparen</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@mipmap/splash</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        //Activated color
        <item name="colorOnSurface">@color/colorPrimaryBlack</item>
        //Normal color
        <item name="hintTextColor">@color/colorPrimaryBlue</item>
        //Normal color
    </style>


    <style name="ThemeElectrician" parent="">
        <item name="android:textColor">@color/colorElectricianText</item>
        <item name="android:textColorHint">@color/colorElectricianText</item>
        <item name="android:editTextColor">@color/colorElectricianText</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="hintTextColor">@color/colorElectricianText</item>
    </style>

    <style name="ThemeSaloon" parent="">
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:textColorHint">@color/colorBlue</item>
        <item name="android:editTextColor">@color/colorBlue</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="hintTextColor">@color/colorBlue</item>
    </style>

    <style name="ThemePlumber" parent="">
