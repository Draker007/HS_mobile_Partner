<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    app:cardCornerRadius="3dp"
    android:id="@+id/main_layout"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="10dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/username_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:fontFamily="@font/montserrat"
            android:textSize="@dimen/regulartextsize"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02_08_2019"
            android:fontFamily="@font/montserrat"
            android:textSize="@dimen/regulartextsize"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07:00PM"
            android:fontFamily="@font/montserrat"
            android:textSize="@dimen/regulartextsize"
            android:layout_weight="1"
            />
    </LinearLayout>

        <TextView
            android:id="@+id/useraddress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#16/1 Surebot Technology"
            android:fontFamily="@font/montserrat"
            android:textSize="@dimen/regulartextsize"
            />

        <TextView
            android:id="@+id/userphonenumber_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123443567"
            android:fontFamily="@font/montserrat"
            android:textSize="@dimen/regulartextsize"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/userservices_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facial,Hair Cut"
            android:fontFamily="@font/montserrat"
            android:textSize="@dimen/regulartextsize"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/moreheader_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/color_blue"
            android:textSize="@dimen/regulartextsize"

            />



    </LinearLayout>
        <LinearLayout
            android:id="@+id/map_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >
        <ImageView
            android:id="@+id/map_iamge"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@mipmap/mapimage"
            />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                >
                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:text="Cancel"
                    android:textColor="@color/color_white"
                    android:textAllCaps="false"
                    android:layout_gravity="start|left"
                    android:textSize="@dimen/regulartextsize"
                    android:fontFamily="@font/montserrat_bold"
                    android:background="@drawable/cancelbutton_background"
                    android:layout_marginRight="5dp"
                    />

                <Button
                    android:id="@+id/startservice_button"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right|end"
                    android:background="@drawable/buttongreen_background"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Start Service"
                    android:textAllCaps="false"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/regulartextsize"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_marginLeft="5dp"
                    />
            </RelativeLayout>

        <ImageView
            android:id="@+id/slide_iamge"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/mapimage"
            android:layout_gravity="end"
            android:visibility="gone"
            />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>