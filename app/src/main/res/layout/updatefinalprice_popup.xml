<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:cardUseCompatPadding="true"
            app:cardElevation="8dp"
            app:cardCornerRadius="3dp"
            android:background="@drawable/popupwhitebackground"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:background="@drawable/popupwhitebackground"

            >

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/enterprice"
    android:textColor="@color/color_blue"
    android:fontFamily="@string/enterprice"
    android:gravity="center"
    android:layout_marginTop="20dp"

    />
            <EditText
                android:id="@+id/enterfinalprice_text"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="@string/rupies"
                android:background="@drawable/newrequestedittextbackground"
                android:layout_marginTop="5dp"

                />
            <EditText
                android:id="@+id/enterreason"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/newrequestedittextbackground"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:hint="@string/reasonforfinalprice"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:gravity="top"
                />



            <TextView
                android:id="@+id/send_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sendbutton"
                android:textColor="@color/color_white"
                android:textSize="@dimen/regulartextsize"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:background="@drawable/buttonblue_background"
                />

        </LinearLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>