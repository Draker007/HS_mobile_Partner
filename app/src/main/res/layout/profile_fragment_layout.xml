<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/d"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_blackforheader">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/EditImageProf"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_launcher_background"
                    app:civ_border_color="#FFFBFB"
                    app:civ_border_width="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ProfileName" />

                <TextView
                    android:id="@+id/ProfileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Profile"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:background="#ffffff"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/EditImageProf"
                    app:layout_constraintVertical_bias="0.0">

                    <Button
                        android:id="@+id/btnIdenVerf"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/round_btn_white"
                        android:fontFamily="@font/montserrat"
                        android:includeFontPadding="true"
                        android:paddingLeft="40dp"
                        android:text="* Identity verificaton"
                        android:textAlignment="viewStart"
                        app:layout_constraintEnd_toEndOf="@+id/btnPersonaldetails"
                        app:layout_constraintStart_toStartOf="@+id/btnPersonaldetails"
                        app:layout_constraintTop_toBottomOf="@+id/btnPersonaldetails" />

                    <Button
                        android:id="@+id/btnAbout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/round_btn_white"
                        android:fontFamily="@font/montserrat"
                        android:includeFontPadding="true"
                        android:paddingLeft="40dp"
                        android:text="* About me"
                        android:textAlignment="viewStart"
                        app:layout_constraintEnd_toEndOf="@+id/btnIdenVerf"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/btnIdenVerf"
                        app:layout_constraintTop_toBottomOf="@+id/accDetailsBTN" />

                    <Button
                        android:id="@+id/btnPersonaldetails"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/round_btn_white"
                        android:fontFamily="@font/montserrat"
                        android:includeFontPadding="true"
                        android:paddingLeft="40dp"
                        android:shadowColor="#AF9898"
                        android:text="* Personal details"
                        android:textAlignment="viewStart"
                        app:layout_constraintEnd_toEndOf="@+id/cardView101"
                        app:layout_constraintStart_toStartOf="@+id/cardView101"
                        app:layout_constraintTop_toBottomOf="@+id/cardView101" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView101"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:layout_marginEnd="50dp"
                        android:layout_marginBottom="8dp"
                        app:cardElevation="20dp"
                        app:layout_constraintBottom_toTopOf="@+id/btnPersonaldetails"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/FragProName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="60dp"
                                android:layout_marginEnd="8dp"
                                android:fontFamily="@font/montserrat"
                                android:textColor="#a1a1a1"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.4"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/FragproEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/montserrat"
                                android:textColor="#a1a1a1"
                                app:layout_constraintStart_toStartOf="@+id/FragProName"
                                app:layout_constraintTop_toBottomOf="@+id/FragProName" />

                            <TextView
                                android:id="@+id/FragproNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="16dp"
                                android:fontFamily="@font/montserrat"
                                android:textColor="#a1a1a1"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/FragproEmail"
                                app:layout_constraintTop_toBottomOf="@+id/FragproEmail" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <Button
                        android:id="@+id/btnAward"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/round_btn_white"
                        android:fontFamily="@font/montserrat"
                        android:includeFontPadding="true"
                        android:paddingLeft="40dp"
                        android:text="@string/award"
                        android:textAlignment="viewStart"
                        app:layout_constraintEnd_toEndOf="@+id/btnAbout"
                        app:layout_constraintStart_toStartOf="@+id/btnAbout"
                        app:layout_constraintTop_toBottomOf="@+id/btnAbout" />

                    <Button
                        android:id="@+id/btnPrimePartner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/round_btn_white"
                        android:fontFamily="@font/montserrat"
                        android:includeFontPadding="true"
                        android:paddingLeft="40dp"
                        android:text="Prime Partner"
                        android:textAlignment="viewStart"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/btnAward"
                        app:layout_constraintStart_toStartOf="@+id/btnAward"
                        app:layout_constraintTop_toBottomOf="@+id/btnAward"
                        app:layout_constraintVertical_bias="0.0" />

                    <Button
                        android:id="@+id/accDetailsBTN"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/round_btn_white"
                        android:fontFamily="@font/montserrat"
                        android:includeFontPadding="true"
                        android:paddingLeft="40dp"
                        android:text="* Account Details"
                        android:textAlignment="viewStart"
                        app:layout_constraintEnd_toEndOf="@+id/btnIdenVerf"
                        app:layout_constraintStart_toStartOf="@+id/btnIdenVerf"
                        app:layout_constraintTop_toBottomOf="@+id/btnIdenVerf" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>