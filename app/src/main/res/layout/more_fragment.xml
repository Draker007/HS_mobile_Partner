<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/headerRL"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/salon_header_bg"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/headerTV"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:fontFamily="@font/open_sans_bold"
            android:gravity="center"
            android:text="@string/more_text"
            android:textColor="@color/color_white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/arrowIV"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@drawable/arrow_back"
            android:tint="@color/color_white"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/paymentLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headerRL"
        android:layout_marginTop="@dimen/spacing_20"
        android:gravity="center_vertical"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:id="@+id/paymentTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_double2"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans_bold"
            android:text="@string/my_payment_text"
            android:textColor="@color/color_black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/paymentArrowIV"
            android:layout_width="20dp"
            android:layout_height="23dp"
            android:layout_marginEnd="@dimen/spacing_20"
            android:src="@drawable/next_arrow"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/aboutUsLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/paymentLL"
        android:layout_marginTop="@dimen/spacing_20"
        android:gravity="center_vertical"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:id="@+id/aboutUsTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_double2"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans_bold"
            android:text="@string/about_us"
            android:textColor="@color/color_black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/aboutUsIV"
            android:layout_width="@dimen/spacing_20"
            android:layout_height="23dp"
            android:layout_marginEnd="@dimen/spacing_20"
            android:src="@drawable/next_arrow"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/helpCenterLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutUsLL"
        android:layout_marginTop="@dimen/spacing_20"
        android:gravity="center_vertical"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:id="@+id/helpCenterTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_double2"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans_bold"
            android:text="@string/help_centre"
            android:textColor="@color/color_black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/helpCenterIV"
            android:layout_width="@dimen/spacing_20"
            android:layout_height="23dp"
            android:layout_marginEnd="@dimen/spacing_20"
            android:src="@drawable/next_arrow"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/primePackagesLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/helpCenterLL"
        android:layout_marginTop="@dimen/spacing_20"
        android:gravity="center_vertical"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:id="@+id/primePackagesTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_double2"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans_bold"
            android:text="@string/prime_packages_text"
            android:textColor="@color/color_black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/primePackagesIV"
            android:layout_width="@dimen/spacing_20"
            android:layout_height="23dp"
            android:layout_marginEnd="@dimen/spacing_20"
            android:src="@drawable/next_arrow"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/changePasswordLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/primePackagesLL"
        android:layout_marginTop="@dimen/spacing_20"
        android:gravity="center_vertical"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:id="@+id/changePasswordTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_double2"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans_bold"
            android:text="@string/change_password_text"
            android:textColor="@color/color_black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/changePasswordIV"
            android:layout_width="@dimen/spacing_20"
            android:layout_height="23dp"
            android:layout_marginEnd="@dimen/spacing_20"
            android:src="@drawable/next_arrow"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/changePasswordLL"
        android:layout_marginTop="@dimen/spacing_20"
        android:gravity="center_vertical"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:id="@+id/logoutTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_double2"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans_bold"
            android:text="@string/logout_text"
            android:textColor="@color/color_black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/logoutIV"
            android:layout_width="@dimen/spacing_20"
            android:layout_height="23dp"
            android:layout_marginEnd="@dimen/spacing_20"
            android:src="@drawable/next_arrow"
            tools:ignore="ContentDescription" />

    </LinearLayout>


</RelativeLayout>